@model List<stageOpdrachtMVC.Models.Bestellingen.Bestellingen>
@{
}
<style>
.bestellingenContainer{
      /* Existing styles */
    transform: translateY(100%); /* Initial position */
    opacity: 0; /* Initially hidden */
    transition: transform 1s ease, opacity 1s ease; /* Transition properties */
}
</style>
<div class="bestellingenContainer">
    <h1>Bestellingen</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Naam</th>
            <th>Email</th>
            <th>Postcode</th>
            <th>Producten(ID)</th>
            <th>Totale prijs</th>
            <th>Datum</th>
            <th>Verwerkt</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var bestellingen in Model)
        {
            <tr>
            <td>@bestellingen.Id</td>
            <td>@bestellingen.Name</td>
            <td>@bestellingen.Email</td>
            <td>@bestellingen.Postcode</td>
            <td>@bestellingen.Producten</td>
            <td>@bestellingen.TotalePrijs</td>
            <td>@bestellingen.Datum</td>
            <td>@bestellingen.Verwerkt</td>
            <td><a href="Bestellingen/Details/@bestellingen.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>
</div>
<script>
      document.addEventListener("DOMContentLoaded", function () {
    // Get the container element
    var container = document.querySelector(".bestellingenContainer");

    // Delay the animation slightly to ensure it starts after the page is fully loaded
    setTimeout(function () {
        // Apply the animation by changing the transform and opacity
        container.style.transform = "translateX(0)";
        container.style.opacity = "1";
    }, 100);
});
</script>