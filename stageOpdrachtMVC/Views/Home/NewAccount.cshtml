@model stageOpdrachtMVC.Models.AddAccountModel;

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registratie</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <div class="container mx-auto mt-16">
        <div class="max-w-md mx-auto bg-white rounded p-8 shadow-md">
            <h2 class="text-2xl font-bold mb-8">Registratie</h2>
            <form action="NewAccount" method="post" onsubmit="return validateForm();">
                <input type="text" placeholder="Naam" asp-for="Username" class="w-full px-4 py-2 mb-4 border rounded-md">
                <input type="email" placeholder="E-mailadres" asp-for="Email" class="w-full px-4 py-2 mb-4 border rounded-md">
                <input type="password" placeholder="Wachtwoord" asp-for="Password" class="w-full px-4 py-2 mb-4 border rounded-md">
                <input type="password" placeholder="Herhaal Wachtwoord" name="herhaalwachtwoord" class="w-full px-4 py-2 mb-4 border rounded-md">
                <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded-md hover:bg-blue-700">
                    Registreer
                </button>
            </form>
            @Html.ActionLink("Heb je een account. Log dan in!", "Index", new { @class = "mt-4 text-blue-500 block" })
        </div>
    </div>

    <script>
        function validateForm() {
            var password = document.querySelector('input[name="Password"]').value;
            var confirmPassword = document.querySelector('input[name="herhaalwachtwoord"]').value;

            if (password !== confirmPassword) {
                alert("Wachtwoord en herhaalwachtwoord komen niet overeen");
                return false;
            }

            return true;
        }
    </script>
</body>
</html>
